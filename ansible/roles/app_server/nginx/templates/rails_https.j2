server {
  listen 80;
  server_name {{ item.host }} {{ item.alias }};

  access_log /var/log/nginx/{{ item.host }}.access.log;
  error_log /var/log/nginx/{{ item.host }}.error.log;

  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl http2;
  server_name {{ item.host }};

  access_log /var/log/nginx/{{ item.host }}.access.log;
  error_log /var/log/nginx/{{ item.host }}.error.log;

  root /home/{{ item.user }}/{{ item.host }}/current/public;
  try_files $uri/index.html $uri.html $uri @app;

  client_max_body_size {{ item.client_max_body_size | default(client_max_body_size) }};
  proxy_read_timeout 300s;

  ssl_certificate /etc/nginx/ssl/{{ item.ssl_file | default(item.host) }}.pem;
  ssl_certificate_key /etc/nginx/ssl/{{ item.ssl_file | default(item.host) }}.key;
  ssl_ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AESGCM:RSA+AES:RSA+3DES:!aNULL:!MD5:!DSS;
  ssl_prefer_server_ciphers on;
  ssl_protocols TLSv1.2;

  location @app {
    proxy_pass http://127.0.0.1:{{ item.rails_port | default(rails_port) }};
    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;

    limit_except GET HEAD POST PUT DELETE PATCH OPTIONS {
      deny all;
    }
  }

  location ~ ^/assets/ {
    expires 1y;
    add_header Cache-Control public;
    add_header ETag '';
    break ;

    limit_except GET HEAD POST PUT DELETE PATCH OPTIONS {
      deny all;
    }
  }
}
