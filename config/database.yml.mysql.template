defaults: &defaults
  adapter: mysql2
  host: 127.0.0.1
  username: <%= ENV["MYSQL_USER"] || "root" %>
  password: <%= ENV["MYSQL_PASSWORD"] %>
  encoding: utf8
  pool: 5
  timeout: 5000

development:
  <<: *defaults
  database: nucore_open_development

test:
  <<: *defaults
  database: nucore_open_test
