defaults: &defaults
  adapter: mysql2
  host: <%= ENV.fetch("MYSQL_HOST", "127.0.0.1") %>
  username: <%= ENV.fetch("MYSQL_USER", "root") %>
  password: <%= ENV.fetch("MYSQL_PASSWORD", "") %>
  encoding: utf8
  pool: 5
  timeout: 5000

development:
  <<: *defaults
  database: nucore_open_development

test:
  <<: *defaults
  database: nucore_open_test
