  encoding: utf8
  pool: 5
  timeout: 5000
  host: <%= ENV["MYSQL_1_PORT_3306_TCP_ADDR"] || "localhost" %>
  port: <%= ENV["MYSQL_1_PORT_3306_TCP_PORT "] || 3306 %>

development:
  <<: *defaults
  database: nucore_open_development

test:
  <<: *defaults
  database: nucore_open_test
