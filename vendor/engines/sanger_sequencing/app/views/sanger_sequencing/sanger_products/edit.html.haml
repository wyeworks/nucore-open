= content_for :head_content do
  = stylesheet_link_tag "sanger_sequencing/sanger_product"

= render "shared/nav/manage_product", secondary_tab: "sanger"

%h2= text("title")

= simple_form_for @sanger_product, url: facility_service_sanger_sequencing_sanger_product_path(current_facility, @product) do |f|
  = f.input :group,
    collection: sanger_product_groups,
    include_blank: false,
    hint: text("group")

  = f.input :needs_primer,
    as: :boolean,
    label: false,
    inline_label: SangerSequencing::SangerProduct.human_attribute_name(:needs_primer),
    hint: text("needs_primer")

  %h4= text("primers")
  %table
    = f.nested_fields_for :primers do |primer_form|
      %div.primer-form
        = primer_form.remove_nested_fields_link text("shared.remove")
        = primer_form.input :id, as: :hidden
        = primer_form.input :name, label: false

  = f.add_nested_fields_link(:primers, nil, class: "btn btn-mini")

  %hr
    = f.submit text("shared.save"), class: "btn btn-primary"
