- affiliates = Affiliate.by_name.map { |a| [a.name, a.id, { data: { subaffiliates_enabled: a.subaffiliates_enabled? } } ] }

= f.association :affiliate,
  collection: affiliates,
  input_html: { class: "js--affiliate" },
  include_blank: true,
  required: true

.js--affiliate_other
  = f.input :affiliate_other,
    required: true,
    label: text("facility_accounts.account_fields.label.affiliate")

