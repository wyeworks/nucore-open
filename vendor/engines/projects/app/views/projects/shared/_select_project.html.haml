- if order_detail.selectable_projects.any?
  .hide-from-print
    = f.input :project_id, collection: order_detail.selectable_projects, input_html: { class: "js--chosen", data: { placeholder: t(".placeholder") } }, include_blank: true
  .show-for-print
    - if order_detail.project
      = f.input :project_id do
        = order_detail.project.name

  :javascript
    $(function() {
      // Give the browser just enough time to set the width of the select before
      // activating Chosen. Otherwise, it will sometimes appear as 0-width.
      loadChosen = function() { ChosenActivator.activate(); }
      setTimeout(loadChosen, 25);
    });
