=content_for :tabnav do
  %ul.nav.nav-tabs
    %li.active
      = tab t(".active", count: all_projects.active.count),
        { action: :index },
        @active_tab == "index" || @active_tab == "admin_projects"

    %li
      = tab t(".inactive", count: all_projects.inactive.count),
        { action: :inactive },
        @active_tab == "inactive"

    - if current_ability.can?(:cross_core_orders, Projects::Project)
      %li
        = tab t(".cross_core_orders"),
          { action: :cross_core_orders },
          @active_tab == "cross_core_orders"
