=content_for :tabnav do
  %ul.nav.nav-tabs
    %li
      = tab t(".projects"),
        { action: :index },
        @active_tab == "index"

    - if current_ability.can?(:cross_core_orders, Projects::Project) && SettingsHelper.feature_on?(:cross_core_order_view)
      %li
        = tab t(".cross_core_orders"),
          { action: :cross_core_orders },
          @active_tab == "cross_core_orders"
