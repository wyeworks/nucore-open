= content_for :h1 do
  = text("pages.global_settings")

= content_for :sidebar do
  = render "admin/shared/sidenav_global", sidenav_tab: "certificates"

%h2= text("title")
= link_to text("admin.shared.add", model: NuResearchSafety::Certificate.model_name.human), new_certificate_path, class: "btn-add" #

%table.table.table-striped.table-hover
  %thead
    %tr
      %th
      %th= NuResearchSafety::Certificate.model_name.human
  %tbody
    - @certificates.each do |certificate|
      %tr
        %td= delete_certificate_link(certificate)
        %td
          = certificate.name
          %span.indented (#{edit_certificate_link(certificate)})
