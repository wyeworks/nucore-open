= content_for :h1 do
  = current_facility

= content_for :sidebar do
  = render "admin/shared/sidenav_users", sidenav_tab: "users"

= content_for :tabnav do
  = render "admin/shared/tabnav_users", secondary_tab: "card_number"

%h1= @user.full_name
= simple_form_for [current_facility, @user], url: facility_user_card_number_update_path(current_facility, @user) do |f|
  = html("instructions")
  .form-inputs
    = f.input :card_number
    = f.button :submit, text("shared.update"), class: ["btn", "btn-primary"]
    &nbsp;
    = link_to text("shared.cancel"), facility_users_path
