= render "shared/transactions/headers"

= content_for :h1 do
  = current_facility

= content_for :tabnav do
  = render "secure_rooms/shared/tabnav_occupancy", secondary_tab: "problem"

.span12
  = render "shared/transactions/search"

- if @order_details.any?
  .span12
    = link_to t("reports.account_transactions.export"), url_for(format: :csv), class: "js--exportSearchResults pull-right", data: { form: ".search_form" }
  .span12
    %p.notice= t(".instructions")
    = render "shared/problem_order_details", assign_price_policies_path: assign_price_policies_to_problem_orders_facility_occupancies_path
- else
  .span12
    %p.notice= t(".no_problem_occupancies")
