= content_for :h1 do
  = current_facility

= content_for :sidebar do
  = render "admin/shared/sidenav_users", sidenav_tab: "users"

%h2= text("users.new.head")

= simple_form_for [current_facility, @user_form] do |f|
  .form-inputs
    = f.input :first_name
    = f.input :last_name
    = f.input :email
    = f.input :phone_number
    = f.input :username, label: @user_form.class.human_attribute_name(:netid), wrapper_html: { class: "js--umass-username" }
    = f.input :no_netid, as: :boolean, label: false, inline_label: true, input_html: { class: "js--umass-username-toggle" }
    = f.button :submit, text("shared.create"), class: ["btn", "btn-primary"]
    &nbsp;
    = link_to text("shared.cancel"), facility_users_path
