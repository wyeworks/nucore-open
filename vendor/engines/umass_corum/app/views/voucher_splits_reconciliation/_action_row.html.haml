.row.table-actions.form-horizontal
  .span2.select_all_none= select_all_link
  .span1.pull-right= submit_tag t(".mivp_pending.submit"), class: ["btn", "btn-primary"], data: { disable_with: t(".mivp_pending.submit") }

- if local_assigns[:inputs]
  .row.table-actions.form-horizontal
    .span3.control-group.fields
      %label.control-label{ for: "bulk-note-checkbox" }= t(".bulk_note_checkbox")
      .controls
        = check_box_tag :bulk_note_checkbox, 0, false, id: "bulk-note-checkbox"
    #bulk-note-input.span5.control-group.fields
      %label.control-label{ for: :bulk_reconcile_note }= t(".bulk_note")
      .controls
        = text_field_tag :bulk_reconcile_note
