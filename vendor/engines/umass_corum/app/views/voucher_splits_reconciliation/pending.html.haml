= javascript_include_tag "transaction_history"
= javascript_include_tag "bulk_note"

= content_for :h1 do
  = current_facility

= content_for :sidebar do
  = render :partial => "admin/shared/sidenav_billing", locals: { sidenav_tab: "mivp_pending" }

%h2= t(".head", model: account_class.model_name.human(count: 2))

= render "shared/transactions/search"

- if @unreconciled_details.present?
  = form_tag(update_umass_corum_voucher_splits_facility_accounts_path, method: :post) do
    = render("confirmation_span") if @unreconciled_details.total_entries > 150

    - show_reconciliation_deposit_number = SettingsHelper.feature_on?(:show_reconciliation_deposit_number)
    = render "voucher_splits_reconciliation/action_row", inputs: true, show_reconciliation_deposit_number: show_reconciliation_deposit_number
    = render "voucher_splits_reconciliation/table", order_details: @unreconciled_details, next_order_status: "mivp_pending"
    = render "voucher_splits_reconciliation/action_row", show_reconciliation_deposit_number: show_reconciliation_deposit_number

  %p= will_paginate(@unreconciled_details)
- else
  %p.notice= t(".none")
