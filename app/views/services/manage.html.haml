= content_for :h1 do
  =h current_facility
= content_for :sidebar do
  = render :partial => 'admin/shared/sidenav_product', :locals => { :sidenav_tab => 'services' }
= content_for :tabnav do
  = render :partial => 'admin/shared/tabnav_product', :locals => {:secondary_tab => 'details'}

%h2=h @service
= readonly_form_for :service do |f|

  = render :partial => 'admin/shared/product_manage', :locals => { :f => f }
- if current_user.manager_of?(current_facility)
  %ul.inline
    %li= link_to 'Edit', edit_facility_service_path(current_facility, @service), :class => 'btn'
