.navbar.navbar-static-top
  .navbar-inner
    .container
      .row
        .span12
          = link_to app_name, main_app.root_path, class: "brand"
          %ul.nav.pull-right.hide-from-print
            - if session_user.nil?
              %li= link_to t("pages.login"), :new_user_session
            - elsif acting_as?
              %li.navbar-text= "#{acting_user.full_name} (#{acting_user.username})"
              %li= link_to "#{t('pages.cart')} (#{current_cart.order_details.sum(:quantity)})", main_app.cart_path
            - else
              %li.navbar-text= "#{session_user.full_name} (#{session_user.username})"
              %li.divider-vertical
              - if current_user.external? && SettingsHelper.feature_on?(:password_update)
                %li= link_to t("user_password.edit.head"), main_app.edit_current_password_path
                %li.divider-vertical
              %li= link_to t('pages.cart') + " (#{current_cart.order_details.sum(:quantity)})", main_app.cart_path
              %li.divider-vertical
              = render "shared/message_summary"
              %li= link_to t('pages.logout'), sign_out_user_path
