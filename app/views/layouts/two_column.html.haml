<!DOCTYPE html>
%html{lang: "en"}
  %head
    = render partial: "/shared/head"
  %body{ class: SettingsHelper.feature_on?(:use_manage) && manage_mode? ? "manage-mode" : "" }
    %header
      = render partial: "/shared/header"
    %nav
      = render partial: "/shared/nav"
    #content{role: "main"}
      .container
        .row
          .col-md-12
            - if content_for?(:h1)
              %h1= yield(:h1)
            - if content_for?(:h2)
              %h2= yield(:h2)
        .row
          .col-md-9.pull-right
            = render partial: "shared/flashes"
            = yield :tabnav
            = yield
          .col-md-3.pull-left
            #sidebar
              = yield :sidebar
    %footer
      = render partial: "/shared/footer"
