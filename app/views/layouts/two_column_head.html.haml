<!DOCTYPE html>
%html
  %head
    = render :partial => '/shared/head'
  %body
    %header
      = render :partial => '/shared/header'
    %nav
      = render :partial => '/shared/nav'
    = render :partial => '/shared/breadcrumb', :locals => { :breadcrumb => yield(:breadcrumb) }
    #content
      .container
        .row
          .span12
            %h1= yield :h1
            %h2= yield :h2
        = yield :top_block
        .row
          .span12
            = yield
    %footer
      = render :partial => '/shared/footer'
