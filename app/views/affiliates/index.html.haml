= content_for :h1 do
  = t("pages.global_settings")

= content_for :sidebar do
  = render "admin/shared/sidenav_global", sidenav_tab: "affiliates"

%h2= t("pages.affiliates")
= link_to t("affiliates.add"), new_affiliate_path, class: "btn-add"

%table.table.table-striped.table-hover
  %thead
    %tr
      %th
      %th{width: "100%"}= t("affiliates.th")
  %tbody
    - Affiliate.all.select(&:destroyable?).each do |affiliate|
      %tr
        %td
          = link_to t("affiliates.remove.label"),
            affiliate_path(affiliate),
            confirm: t("affiliates.remove.confirm", name: affiliate.name),
            method: :delete
        %td.indented_lots
          = affiliate.name
          %span.indented
            == (#{link_to(t("affiliates.edit"), edit_affiliate_path(affiliate))})
