= content_for :h1 do
  = t("pages.global_settings")

= content_for :sidebar do
  = render "admin/shared/sidenav_global", sidenav_tab: "holidays"

%h2= t(".title")

= link_to t(".new"), new_holiday_path, class: "btn-add"

%table.table
  %caption= t(".caption")
  %thead
    %th.span1{scope: "col"}= t(".date")
    %th.span11{scope: "col"}= t(".actions")
  %tbody
    - @holidays.each do |holiday|
      %tr
        %th{scope: "row"}= format_usa_date holiday.date
        %td
          = link_to t(".edit"), edit_holiday_path(holiday)
          %span= "|"
          = link_to t(".delete"), holiday_path(holiday), method: :delete, data: { confirm: t(".confirm_delete") }

%p
  %em= t(".recency")
