%td
  = hidden_field_tag "price_policy_#{price_group.id}[usage_rate]",
    display_usage_rate(price_group, price_policy),
    class: "usage_cost"
  = t("price_policies.adjustment")
  %br
  = text_field_tag "price_policy_#{price_group.id}[usage_subsidy]",
    display_usage_subsidy(price_group, price_policy), size: 8, class: "usage_adjustment"

%td
  = t("price_policies.amount")
  %br
  %span.minimum_cost{ data: { usage_subsidy: price_policy.usage_subsidy } }
  = hidden_price_policy_tag(price_group.id, price_policy.minimum_cost, :minimum_cost, params["price_policy_#{price_group.id}"])

- if local_assigns[:cancellation] != false
  %td
    = t("price_policies.amount")
    %br
    %span.cancellation_cost
    = hidden_price_policy_tag(price_group.id, price_policy.cancellation_cost, :cancellation_cost, params["price_policy_#{price_group.id}"])
