= content_for :sidebar do
  = render "admin/shared/sidenav_users", sidenav_tab: "accounts"

= content_for :tabnav do
  = render :partial => 'admin/shared/tabnav_payment_method', :locals => {:secondary_tab => 'members'}

= content_for :h1 do
  =h current_facility

%h2= @account
%h3= t('.head')

= form_tag user_search_results_path, :id => "ajax_form" do
  = label_tag :search_term, t('.label.search_term')
  %br
  = text_field_tag :search_term, nil, :size => 30, :class => 'search-query'
  = submit_tag "Search", :class => 'btn'
  = hidden_field_tag :facility_id, current_facility.id
  = hidden_field_tag :account_id, @account.id
  = hidden_field_tag :search_type, 'facility_account_account_user'
  = hidden_field_tag :create_link, 'true'
%br
#result