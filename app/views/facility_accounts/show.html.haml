= render "sidebar"

= content_for :tabnav do
  = render "admin/shared/tabnav_payment_method", secondary_tab: "details"

= content_for :h1 do
  = current_facility

%h2= @account

= readonly_form_for :account do |f|
  = f.input :owner_user
  = f.input :type_string
  = f.input :description
  = f.input :expires_at, date_only: true
  - if @account.suspended?
    = f.input :suspended_at, date_only: true
  - if lookup_context.exists? "facility_accounts/#{@account.class.name.underscore}/show", [], true
    = render "facility_accounts/#{@account.class.name.underscore}/show", f: f
  - if @account.affiliate
    = f.input :affiliate, input_html: { value: @account.affiliate_to_s }
  = f.input :display_status,
    input_html: { class: @account.suspended? ? "suspended-account" : "" }

  - unless @account.is_a?(NufsAccount)
    = f.input :remittance_information, value_method: Proc.new { |value| value.present? ? simple_format(value) : "None Entered"}

%ul.inline
  - if SettingsHelper.feature_on? :edit_accounts
    = link_to t(".link.edit"), edit_facility_account_path(current_facility, @account), class: %w(btn btn-primary)
  = render "accounts/suspend_button"
