= content_for :sidebar do
  = render "admin/shared/sidenav_users", sidenav_tab: "accounts"

= content_for :tabnav do
  = render "admin/shared/tabnav_payment_method", secondary_tab: "statements"

= content_for :h1 do
  = current_facility

%h2= @account

- if @statements.empty?
  %p.notice= t(".notice")
- else
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th
        %th= t(".th.sent_at")
        %th= t(".th.sent_by")
        %th.currency= t(".th.orders")
    %tbody
      - @statements.each do |statement|
        %tr
          %td.centered
            = link_to t(".download"), facility_account_statement_path(current_facility, @account, statement, format: :pdf)
          %td= human_datetime(statement.created_at)
          %td= begin User.find(statement.created_by).full_name rescue "Unknown" end
          %td.currency= statement.order_details.count
  = will_paginate(@statements)
