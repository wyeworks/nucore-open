%p= "#{@facility.abbreviation} / #{@instrument.name}"

- unless @walkup_available
	%p.alert Someone has a reservation comping up. Next available start time is: 

%dl
	%dt Reservation Date
	%dd= human_date(@reservation_data[:reserve_start_at])

	%dt Reservation Time
	%dd= human_time(@reservation_data[:reserve_start_at])

= form_with url: facility_instrument_quick_reservations_path(@facility, @instrument) do |f|
	%h4 Reservation Length
	= f.hidden_field "reservation[reserve_start_date]", value: @reservation_data[:reserve_start_at]
	= f.hidden_field "reservation[reserve_start_hour]", value: @reservation_data[:reserve_start_at].hour
	= f.hidden_field "reservation[reserve_start_min]", value: @reservation_data[:reserve_start_at].min
	= f.hidden_field "reservation[reserve_start_meridian]", value: @reservation_data[:reserve_start_at].strftime("%p")

	- @possible_reservation_data.each do |res_data|
		= f.radio_button "reservation[duration_mins]", res_data[:duration_mins]
		= f.label "reservation[duration_mins]_#{res_data[:duration_mins]}", "#{res_data[:duration_mins]} mins"
	- accounts = @current_user.accounts_for_product(@instrument)
	= f.select :order_account, accounts.map { |a| [a, a.id] }
	%br
	= f.submit "Create Reservation"
