= content_for :h1 do
  =h current_facility
= content_for :sidebar do
  = render :partial => 'admin/shared/sidenav_admin', :locals => { :sidenav_tab => 'statuses' }

%h2 Edit Order Status

= simple_form_for(@order_status, :url => facility_order_status_url, :method => 'put') do |f|
  = f.error_messages
  = f.input :name

  %ul.inline
    %li= f.submit 'Save', :class => ['btn', 'btn-primary']
    %li= link_to 'Cancel', facility_order_statuses_path
