  = text_field_tag "price_policy_#{pg.id}[cancellation_cost]",
    params["price_policy_#{pg.id}"] ? params["price_policy_#{pg.id}"][:cancellation_cost] : number_to_currency(pp.cancellation_cost, unit: "", delimiter: ""),
