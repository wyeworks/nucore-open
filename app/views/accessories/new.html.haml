- if modal?
  .modal-header
    = modal_close_button
    %h3= t("product_accessories.pick_accessories.title")
  = render "form"
- else
  = content_for :h1 do
    = t("order_details.show.head.h1", order_number: @order_detail)
  %h3= t("product_accessories.pick_accessories.title")

  .container.not-in-modal
    .row
      .span6
        = render "form"
  :javascript
    new AccessoryPicker($('#accessory-form'))
