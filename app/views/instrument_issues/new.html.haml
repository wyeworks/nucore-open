= content_for :breadcrumb do
  %ul.breadcrumb
    %li= link_to "Home", :root
    %li &raquo;
    %li= link_to current_facility, current_facility
    %li &raquo;
    %li= @product.name

= content_for :h1 do
  = @product.name

- if @modal_view
  .modal
    .modal-header
      = modal_close_button
      %h2= text("title")
      %p= text("instructions")
    .modal-body
      = simple_form_for @instrument_issue, url: @form_url, method: :post do |f|
        = f.input :message, as: :text, input_html: { class: "input-xxlarge" }
        = f.submit text("submit"), class: "btn btn-primary"
    .modal-footer
      = modal_cancel_button text: text("shared.cancel")
- else
  .row
    .span12
      %h2= text("title")
      %p= text("instructions")

  .row
    .span6
      = simple_form_for @instrument_issue, url: @form_url, method: :post do |f|
        = f.input :message, as: :text, input_html: { class: "input-xxlarge", rows: 6 }
        = f.submit text("submit"), class: "btn btn-primary"
