%ul.sidebar-nav
  - if current_ability.can?(:administer, User)
    = tab t("activerecord.models.user", count: 2), facility_users_path, (sidenav_tab == "users")
  - if current_ability.can?(:send_bulk_emails, current_facility)
    = tab t("bulk_email.title"), facility_bulk_email_path, (sidenav_tab == "bulk_email")
  - if SettingsHelper.feature_on?(:manage_payment_sources_with_users) && current_ability.can?(:manage, Account)
    = tab t("activerecord.models.account", count: 2), facility_accounts_path, (sidenav_tab == "accounts")
