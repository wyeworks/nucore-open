%ul.nav.nav-tabs
  = tab t('shared.admin.tabnav_account.recent'), facility_accounts_path, (secondary_tab == 'recent')
  - if SettingsHelper.feature_on? :edit_accounts
    = tab t('shared.admin.tabnav_account.user'), user_search_facility_accounts_path, (secondary_tab == 'search_by_user')
  = tab t('shared.admin.tabnav_account.account'), search_facility_accounts_path, (secondary_tab == 'search_by_account')
  - if SettingsHelper.feature_on? :edit_accounts
    = tab t('shared.admin.tabnav_account.add_account'), new_account_user_search_facility_accounts_path, (secondary_tab == 'add_account')
