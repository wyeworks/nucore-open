= content_for :h1 do
  =h current_facility
= content_for :sidebar do
  = render :partial => 'admin/shared/sidenav_admin', :locals => { :sidenav_tab => 'price_groups' }

%h2 Add Price Group
%fieldset
  = simple_form_for([current_facility, @price_group]) do |f|
    = f.error_messages
    = render :partial => 'price_group_fields', :locals => {:f => f}
    %ul.inline
      %li= f.submit 'Create', :class => ['btn', 'btn-primary']
      %li= link_to 'Cancel', facility_price_groups_path
