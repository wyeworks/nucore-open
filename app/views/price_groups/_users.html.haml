%p= t("price_groups.show.users.intro")
- if @price_group_ability.can?(:create, UserPriceGroupMember) && @price_group.can_manage_price_group_members?
  %p= link_to text("price_groups.show.users.add_user"), new_facility_price_group_user_price_group_member_path(current_facility, @price_group), class: "btn-add"

= form_tag users_search_facility_price_group_path, id: "ajax_form", method: :get do
  = label_tag :price_group_user_search, text("price_groups.show.users.search_form.label")
  = text_field_tag :search, nil, size: 50, class: "search-query", id: "price_group_user_search"
  = submit_tag text("price_groups.show.users.search_form.button"), class: "btn"

= render "users_results"
