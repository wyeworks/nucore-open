= content_for :h1 do
  = current_facility

= content_for :sidebar do
  = render "admin/shared/sidenav_product", sidenav_tab: "instruments"

= content_for :tabnav do
  = render "admin/shared/tabnav_product", secondary_tab: "reservations"

%h2= @instrument

= simple_form_for([@instrument, @reservation], url: url) do |f|
  = f.error_messages

  %ul.inline
    %li= f.input :admin_note, input_html: { class: "span4" }
    %li
      = f.input :category,
        collection: offline_category_collection,
        input_html: { class: "span2" }

  .clearfix
  %ul.inline
    %li= f.submit submit_button_label, class: submit_button_class
    %li= link_to t("shared.cancel"), facility_instrument_schedule_path
