.hidden-phone
  %table.table.table-striped.table-bordered
    %tbody
      %tr
        %th
          %span Day of Week
        - ScheduleRules::OpenHours.weekdays.each do |weekday|
          %th= weekday
      %tr
        %th Start Time Availability
        - ScheduleRules::OpenHours.weekdays.each do |weekday|
          %td= weekday_opening_times[weekday] || '-'

.hidden-desktop.hidden-tablet
  %table.table.table-striped.table-bordered
    %tbody
      %tr
        %th
          %span Day of Week
        %th Start Time Availability
        - ScheduleRules::OpenHours.weekdays.each do |weekday|
          %tr
            %th= weekday
            %td= weekday_opening_times[weekday] || '-'

