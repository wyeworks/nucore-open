- if SettingsHelper.feature_on?(:equipment_list)
  = render "shared/nav/equipment_list_nav"

.welcome= text(".welcome")

- if @facilities.any?

  - if @recently_used_facilities.present?
    %h4= text(".recently_used")
    - @recently_used_facilities.each do |facility|
      %h4.header-tight= link_to facility, facility_path(facility)
    %hr

  - if @recent_products.any?
    %h4= text(".recently_purchased")
    = render 'product_list', products: @recent_products
    %hr

  %h4= text(".all")
  .facility_list_container{class: @list_layout}
    - @facilities.each do |facility|
      .facility_listing{class: @list_layout}
        - if @list_layout == 'tile'
          - if facility.thumbnail.exists?
            = link_to image_tag(facility.thumbnail(:thumb)), facility_path(facility)
          - else 
            = link_to facility_path(facility) do
              .thumbnailFallback= facility.abbreviation
          %h4= facility
        - else
          %h4= link_to facility, facility_path(facility)
        %p= facility.short_description
      
    
- else
  = render "recently_used_facilities"
  %hr
  = render "product_list", products: @recent_products, title: text("recently_purchased")
  %hr
  = render "facilities_list"
